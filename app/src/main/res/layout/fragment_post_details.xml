<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.PostDetailsFragment"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/post_details_description"
        android:layout_width="320dp"
        android:layout_height="224dp"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="41dp"
        android:scrollbars="vertical"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/post_details_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_details_location" />

    <TextView
        android:id="@+id/post_details_location"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="137dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/post_details_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_details_title" />

    <TextView
        android:id="@+id/post_details_title"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/post_details_location"
        app:layout_constraintEnd_toEndOf="@+id/post_details_location"
        app:layout_constraintStart_toStartOf="@+id/post_details_image"
        app:layout_constraintTop_toBottomOf="@+id/post_details_image" />

    <ImageView
        android:id="@+id/post_details_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintBottom_toTopOf="@+id/post_details_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>